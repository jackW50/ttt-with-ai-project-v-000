#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Hello!, Let's Play Tic Tac Toe!"
puts "How many players: 1, 2 or 0"
input = gets.strip 

player_1 = Players::Human.new("X") if input == 1 || 2  

player_1 = Players::Computer.new("X") if input == 0

player_2 = Players::Human.new("O") if input == 2 

player_2 = Players::Computer.new("O") if input == 0 || 1 
 

player_1 = Players::Computer.new("X")

player_2 = Players::Computer.new("O")

board = Board.new

game = Game.new(player_1, player_2, board)

game.play 
